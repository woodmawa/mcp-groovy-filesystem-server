<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 
        MCP STDIO Server Logging Configuration
        CRITICAL: ALL console output MUST go to System.err
        System.out is reserved EXCLUSIVELY for MCP JSON-RPC messages
    -->
    
    <!-- Console appender to STDERR (keeps STDOUT clean for MCP) -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File appender for debugging -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.home}/.mcp-logs/filesystem-server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${user.home}/.mcp-logs/filesystem-server.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger: INFO to stderr and file -->
    <root level="INFO">
        <appender-ref ref="STDERR"/>
        <appender-ref ref="FILE"/>
    </root>
    
    <!-- Debug level for our code -->
    <logger name="com.softwood.mcp" level="DEBUG"/>
    
    <!-- Reduce noise from Spring -->
    <logger name="org.springframework" level="WARN"/>
</configuration>
